#include<algorithm>
#define f(i,m,n) for(i=m;i<n;i++)
#define ull unsigned long long
#define sc scanf
#define pf printf
#define var int i=0,j=0,k=0,tmp1,tmp2,tmp3,tmp
using namespace std;

void init(ull *a,int len) {
	int i;
	f(i,0,len)
		a[i]=0;
}
void print(ull *a,int len) {
	int i;
	f(i,0,len)
		printf("%llu",a[i]);
}

int main() {
	var;
	int n,m;
	sc("%d%d",&n,&m);
	f(i,1,n+1) {
		if((i%m==0)&&(i>=m))
			n++;
	}
	pf("%d",i);
	return 0;
}
